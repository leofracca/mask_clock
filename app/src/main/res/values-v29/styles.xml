<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <!-- Action bar and status bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">@bool/lightStatusBar</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowLightNavigationBar">@bool/lightNavigationBar</item>

        <!-- Accent -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Text color -->
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="android:textColor">@color/textColor</item>

        <!-- Animations -->
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>

        <!-- Dark theme -->
        <item name="android:forceDarkAllowed">true</item>

    </style>
</resources>